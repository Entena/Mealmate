<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/abc_action_bar_default_padding_material"
    tools:context="cs3724.group.mealmate.GoalsViewFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_weight=".01"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Goals" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".004"
        android:entries="@array/durationGoal"
        android:id="@+id/spinnerGoalDuration" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".99"
        android:id="@+id/goalsTable"></ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_weight=".001"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewGoalsTotals" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight=".01"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:id="@+id/btnGoalsRemove" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight=".01"
            android:layout_height="wrap_content"
            android:text="Add Goal"
            android:id="@+id/btnGoalsAddGoal" />

    </LinearLayout>
</LinearLayout>
